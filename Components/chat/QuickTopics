import react from "react";
import { Button } from "@/components/ui/button";
import { Card, CardContent, CardHeader, CardTitle } from "@/components/ui/card";
import { 
  Shield, 
  Thermometer, 
  Syringe, 
  Baby, 
  Heart, 
  Apple,
  Brain,
  AlertTriangle
} from "lucide-react";

const quickTopics = {
  english: [
    { icon: Shield, title: "Preventive Care", question: "How can I prevent common illnesses?" },
    { icon: Thermometer, title: "Fever & Symptoms", question: "What should I do if I have fever?" },
    { icon: Syringe, title: "Vaccination", question: "Tell me about vaccination schedules" },
    { icon: Baby, title: "Child Health", question: "How to keep my child healthy?" },
    { icon: Heart, title: "Heart Health", question: "How to maintain good heart health?" },
    { icon: Apple, title: "Nutrition", question: "What foods should I eat to stay healthy?" },
    { icon: Brain, title: "Mental Wellness", question: "How to take care of mental health?" },
    { icon: AlertTriangle, title: "Emergency", question: "What to do in a health emergency?" }
  ],
  hindi: [
    { icon: Shield, title: "रोकथाम", question: "आम बीमारियों से कैसे बचा जा सकता है?" },
    { icon: Thermometer, title: "बुखार", question: "बुखार होने पर क्या करना चाहिए?" },
    { icon: Syringe, title: "टीकाकरण", question: "टीकाकरण की जानकारी दें" },
    { icon: Baby, title: "बच्चों का स्वास्थ्य", question: "अपने बच्चे को कैसे स्वस्थ रखें?" },
    { icon: Heart, title: "दिल का स्वास्थ्य", question: "दिल को स्वस्थ कैसे रखें?" },
    { icon: Apple, title: "पोषण", question: "स्वस्थ रहने के लिए क्या खाना चाहिए?" },
    { icon: Brain, title: "मानसिक स्वास्थ्य", question: "मानसिक स्वास्थ्य की देखभाल कैसे करें?" },
    { icon: AlertTriangle, title: "आपातकाल", question: "स्वास्थ्य आपातकाल में क्या करें?" }
  ]
};

export default function QuickTopics({ onTopicSelect, language }) {
  const topics = quickTopics[language] || quickTopics.english;
  
  return (
    <Card className="bg-white/80 backdrop-blur-sm border-slate-200/60 shadow-sm mb-4">
      <CardHeader className="pb-3">
        <CardTitle className="text-lg font-semibold text-slate-800 flex items-center gap-2">
          <Heart className="w-5 h-5 text-blue-600" />
          Quick Health Topics
        </CardTitle>
      </CardHeader>
      <CardContent>
        <div className="grid grid-cols-2 md:grid-cols-4 gap-3">
          {topics.map((topic, index) => (
            <Button
              key={index}
              variant="outline"
              className="h-auto p-4 flex flex-col items-center gap-3 hover:bg-gradient-to-r hover:from-blue-50 hover:to-green-50 hover:border-blue-200 transition-all duration-200 text-center"
              onClick={() => onTopicSelect(topic.question)}
            >
              <topic.icon className="w-6 h-6 text-blue-600" />
              <span className="text-sm font-medium text-slate-700 leading-tight">
                {topic.title}
              </span>
            </Button>
          ))}
        </div>
      </CardContent>
    </Card>
  );
}